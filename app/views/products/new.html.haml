.body
  
  .contener

    .header
      .header__image
        = image_tag "/assets/fmarket_logo_red.svg", class: "icon"

    .main
      .main__line
        .main__line__contener
          .main__line__contener__head
            商品の情報を入力

          .main__line__contener__form
            .main__line__contener__form__upload
              .main__line__contener__form__upload__top
                出品画像
              .main__line__contener__form__upload__under
                最大10枚までアップロードできます
              .main__line__contener__form__upload__image.clearfix
                .main__line__contener__form__upload__image__container
                  .main__line__contener__form__upload__image__container__sell
                .main__line__contener__form__upload__image__box
                  %input.drop{:multiple => "", :name => "image1", :style => "display: none;", :type => "file"}/
                  %p.list
                    ドラッグアンドドロップ
                    またはクリックしてファイルをアップロード

          .main__line__contener__item
            .main__line__contener__item__name
              商品名
            .main__line__contener__item__name-box
              %input.input-name{:placeholder => "商品名（必須 40文字まで)", :value => ""}/
            
            .main__line__contener__item__explain
              商品の説明
            .main__line__contener__item__explain-box
              %textarea.input-explain{:placeholder => "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", :rows => "5"}
          
          .main__line__contener__item__detail.clearfix
            %h3.left 商品の詳細
            .main__line__contener__item__detail__right
              .main__line__contener__item__detail__right__category
                カテゴリー
              .main__line__contener__item__detail__right__category-form
                %select.select-category
                  %option{:value => ""} ---
                  %option{:value => "1"} レディース
                  %option{:value => "2"} メンズ
                  %option{:value => "3"} ベビー・キッズ
                  %option{:value => "4"} インテリア・住まい・小物
                  %option{:value => "5"} 本・音楽・ゲーム
                  %option{:value => "1328"} おもちゃ・ホビー・グッズ
                  %option{:value => "6"} コスメ・香水・美容
                  %option{:value => "7"} 家電・スマホ・カメラ
                  %option{:value => "8"} スポーツ・レジャー
                  %option{:value => "9"} ハンドメイド
                  %option{:value => "1027"} チケット
                  %option{:value => "1318"} 自動車・オートバイ
                  %option{:value => "10"} その他
              
              .main__line__contener__item__detail__right__state
                商品の状態
              .main__line__contener__item__detail__right__state-form
                %select.select-state
                  %option{:value => ""} ---
                  %option{:value => "1"} 新品、未使用
                  %option{:value => "2"} 未使用に近い
                  %option{:value => "3"} 目立った傷や汚れなし
                  %option{:value => "4"} やや傷や汚れあり
                  %option{:value => "5"} 傷や汚れあり
                  %option{:value => "6"} 全体的に状態が悪い

