.wrapper

  .signup__step4
    = render "signup/signup_header"

  %main.signup__main
    %h2.signup__main__header
      = "支払い方法"

    = form_tag(cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .signup__main__content
        .form__group
          %label カード番号
          %sapn.form__require 必須
          = text_field_tag "number", "", class: "input__nomal", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        .form__group
          %label 有効期限
          %sapn.form__require 必須
          %br/
          %select#exp_month{name: "exp_month", type: "text"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span 月
          %select#exp_year{name: "exp_year", type: "text"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span 年
        .form__group
          %label セキュリティコード
          %sapn.form__require 必須
          = text_field_tag "cvc", "", class: "input__nomal", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        .form__group
          #card_token
          = submit_tag "追加する", class: "signup__submit__btn",id: "token_submit"

  = render "signup/simple_footer"