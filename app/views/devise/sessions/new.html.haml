.wrapper

  = render "signup/simple_header"

  %main.signin__main
    %h2.signin__main__header
      .signin__no__account
        .form__group
          %p
            = "アカウントをお持ちではない方はこちら"
        .signin__btn
          = link_to "新規会員登録",signup_link_signup_index_path
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .signin__main__content
        .signin__account
          .link__facebook
            %i.fa.fa-facebook-official
            = link_to "facebookでログイン" 
          .link__google
            %i.fa.fa-google
            = link_to "Googleでログイン" 
          .form__group
            = f.email_field :email, class: "input__nomal", placeholder: "メールアドレス"
          .form__group
            = f.text_field :password, class: "input__nomal", placeholder: "パスワード"
          .form__group
            = f.submit "次へ進む",class: "signin__submit__btn"
          .password__forgot
            = link_to "#" do
              = "パスワードをお忘れの方"

  = render "signup/simple_footer"